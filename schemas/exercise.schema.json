{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amarillo Exercise Config",
  "type": "object",
  "required": ["metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["id", "name", "exercise", "inherits"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "exercise": {"type": "integer"},
        "inherits": {"type": "string"}
      }
    },
    "requirements": {
      "type": "object",
      "properties": {
        "description": {"type": "string"},
        "must_have": {"type": "array", "items": {"type": "string"}},
        "nice_to_have": {"type": "array", "items": {"type": "string"}}
      }
    },
    "checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "category", "weight"],
        "properties": {
          "item": {"type": "string"},
          "category": {"type": "string"},
          "weight": {"type": "integer", "minimum": 1}
        }
      }
    },
    "additional_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pattern", "message", "severity", "category"],
        "properties": {
          "id": {"type": "string"},
          "pattern": {"type": "string"},
          "message": {"type": "string"},
          "severity": {"type": "string", "enum": ["error", "warning", "info"]},
          "category": {"type": "string"}
        }
      }
    },
    "ai_instructions_override": {"type": "string"},
    "ai_provider": {
      "type": "object",
      "properties": {
        "primary": {"type": "string", "enum": ["zai", "ollama"]},
        "fallback": {"type": "string", "enum": ["zai", "ollama", "none"]},
        "model": {"type": "string"}
      }
    }
  }
}
