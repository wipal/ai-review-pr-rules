{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amarillo Course Config",
  "type": "object",
  "required": ["metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["id", "name", "language", "frameworks", "difficulty"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "language": {"type": "string"},
        "frameworks": {"type": "array", "items": {"type": "string"}},
        "difficulty": {"type": "string", "enum": ["beginner", "intermediate", "advanced"]}
      }
    },
    "quick_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pattern", "message", "severity", "category"],
        "properties": {
          "id": {"type": "string"},
          "pattern": {"type": "string"},
          "message": {"type": "string"},
          "severity": {"type": "string", "enum": ["error", "warning", "info"]},
          "category": {"type": "string"}
        }
      }
    },
    "ai_instructions_template": {"type": "string"},
    "ai_provider": {
      "type": "object",
      "properties": {
        "primary": {"type": "string", "enum": ["zai", "ollama"]},
        "fallback": {"type": "string", "enum": ["zai", "ollama", "none"]},
        "model": {"type": "string"}
      }
    },
    "checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "category", "weight"],
        "properties": {
          "item": {"type": "string"},
          "category": {"type": "string"},
          "weight": {"type": "integer", "minimum": 1}
        }
      }
    }
  }
}
